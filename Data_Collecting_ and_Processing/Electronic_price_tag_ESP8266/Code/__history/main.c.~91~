{ 
   uchar i, j;
   uchar addr = 0;
   for (i = 0; i < num; i++)
   { Write_1621_2(addr, 0xff);
      addr += 1;
   }
}      /****************************************************************************

                  Name: all_on_num(All lit,Display the same number)
****************************************************************************/

void HT1621_all_on_num_2(uchar num, uchar xx)
{ 
   uchar i, j;
   uchar addr = 0;
   for (i = 0; i < num; i++)
   { Write_1621_2(addr, xx);
      addr += 1;
   }
}

